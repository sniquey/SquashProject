<h1>Listing players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Matrix</th>
      <th>Email</th>
      <th>Avatar</th>
      <th>Photo</th>
      <th>Club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
    
      <tr>
        <td><%= player.name %></td>
        <td><%= player.matrix %></td>
        <td><%= player.email %></td>
        <td><%= player.phone %></td>
        <td><%= image_tag player.avatar %></td>
        <td><%= link_to player.club.name, player.club %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

