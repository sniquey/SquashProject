<h1>Listing players</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Matrix</th>
      <th>Email</th>
      <th>Avatar</th>
      <th>Phone Number</th>
      <th>Club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
    
      <tr>
        <td><%= player.name %></td>
        <td><%= player.matrix %></td>
        <td><%= player.email %></td>
        <td><%= image_tag player.avatar %></td>
        <td><%= player.phone %></td>
        <% if Club.find_by(:id => player.club_id).nil? %>
       <td>No club</td>
        <% else %>
         <td><%= link_to player.club.name, player.club %></td>
        
        <% end %>
        <td><%= link_to 'Go to player page', player %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>
